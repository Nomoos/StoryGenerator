# .env.example - C# Environment Variables Template
# Copy this file to .env and fill in your API keys
# Usage: cp .env.example .env

# OpenAI API Key (required for GPT-4o-mini script generation)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# ElevenLabs API Key (required for voice synthesis)
# Get your key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Optional: ElevenLabs Voice ID (default: BZgkqPqms7Kj9ulSkVzn)
ELEVENLABS_VOICE_ID=BZgkqPqms7Kj9ulSkVzn

# Optional: Model Settings
DEFAULT_MODEL=gpt-4o-mini
TEMPERATURE=0.9
MAX_TOKENS=4000

# Optional: Storage Configuration
STORY_ROOT=./Stories

# Optional: Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# Optional: Performance
ENABLE_CACHE=true
CACHE_DIR=./cache
MAX_RETRIES=3
