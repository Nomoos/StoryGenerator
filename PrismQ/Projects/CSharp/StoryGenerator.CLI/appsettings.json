{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "Python": {
    "InterpreterPath": "python3",
    "ScriptsPath": "../../scripts",
    "TimeoutSeconds": 300,
    "MaxConcurrentProcesses": 4
  },
  "Database": {
    "Provider": "SQLite",
    "ConnectionString": "Data Source=storygenerator.db",
    "EnableMigrations": true,
    "CommandTimeoutSeconds": 30
  },
  "FFmpeg": {
    "ExecutablePath": "ffmpeg",
    "FfprobePath": "ffprobe",
    "TimeoutSeconds": 600,
    "DefaultCrf": 23,
    "DefaultPreset": "medium"
  }
}
