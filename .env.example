# .env.example - Environment Variables Template
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for GPT-4o-mini script generation)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# ElevenLabs API Key (for voice synthesis)
# Get your key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=sk-your-elevenlabs-key-here

# HuggingFace Token (optional, for private models)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your-token-here

# Reddit API Configuration (for story scraping)
# Get your credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Model Settings
DEFAULT_MODEL=gpt-4o-mini
TEMPERATURE=0.9
MAX_TOKENS=4000

# Storage Configuration
STORY_ROOT=./Stories

# Voice Settings
VOICE_ID=BZgkqPqms7Kj9ulSkVzn
VOICE_MODEL=eleven_v3
VOICE_STYLE=Creative

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# Performance
ENABLE_CACHE=true
CACHE_DIR=./cache
MAX_RETRIES=3

# Optional: Model cache directory (default: ~/.cache/huggingface)
# HF_HOME=/path/to/model/cache

# Optional: GPU device ID (default: 0)
# CUDA_VISIBLE_DEVICES=0

# Optional: Enable debug logging (default: false)
# DEBUG=true

# =============================================================================
# Windows Pipeline Configuration
# =============================================================================

# Core Pipeline Settings
APP_ENV=dev
RUN_ROOT=.runs
OUTPUT_DIR=outputs
ASSETS_DIR=assets

# Database Configuration (optional - for story tracking)
# SQLite database file path
DB_PATH=data/pipeline_stories.db

# Script Defaults (Windows)
MAX_TRIES=3
SLEEP_SECS=5
DEFAULT_STORY_ID=

# Step-specific Configuration
# Step 01: Ingest
STEP_01_INGEST_SOURCE_DIR=data/raw
STEP_01_INGEST_MIN_LENGTH=100

# Step 02: Preprocess
STEP_02_PREPROCESS_MIN_WORDS=50
STEP_02_PREPROCESS_MAX_WORDS=500

# Step 03: Generate
STEP_03_GENERATE_MODEL_NAME=gpt-4o-mini
STEP_03_GENERATE_TEMPERATURE=0.9
STEP_03_GENERATE_MAX_TOKENS=4000

# Step 04: Postprocess
STEP_04_POSTPROCESS_MIN_QUALITY=0.7

# Step 05: Package
STEP_05_PACKAGE_OUTPUT_FORMAT=mp4
STEP_05_PACKAGE_COMPRESSION=high
